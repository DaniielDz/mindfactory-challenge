generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  posts      Post[]
  created_at DateTime @default(now())

  @@map("users")
}

model Post {
  id         String   @id @default(uuid())
  title      String
  content    String
  user_id    String
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  created_at DateTime @default(now())

  @@map("posts")
}
